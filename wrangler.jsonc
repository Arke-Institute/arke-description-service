{
  // Worker configuration for description-service
  "name": "arke-description-service",
  "main": "src/index.ts",
  "compatibility_date": "2024-01-01",

  // Environment variables
  "vars": {
    // LLM Configuration
    "DEEPINFRA_BASE_URL": "https://api.deepinfra.com/v1/openai",
    "MODEL_NAME": "Qwen/Qwen3-235B-A22B-Instruct-2507",
    "MAX_TOKENS": 3072,
    "CONTEXT_WINDOW_TOKENS": 262144,  // Qwen3-235B supports 256K context
    "SAFETY_MARGIN_RATIO": 0.7,

    // DO Configuration
    "MAX_RETRIES_PER_PI": "3",
    "MAX_CALLBACK_RETRIES": "3",
    "ALARM_INTERVAL_MS": "100"
  },

  // Note: Set DEEPINFRA_API_KEY as a secret using:
  // wrangler secret put DEEPINFRA_API_KEY

  // R2 Bucket binding
  "r2_buckets": [
    {
      "binding": "STAGING_BUCKET",
      "bucket_name": "arke-staging"
    }
  ],

  // Service bindings
  "services": [
    {
      "binding": "IPFS_WRAPPER",
      "service": "arke-ipfs-api"
    },
    {
      "binding": "ORCHESTRATOR",
      "service": "arke-orchestrator"
    }
  ],

  // Durable Objects - SQLite-backed
  "durable_objects": {
    "bindings": [
      {
        "name": "DESCRIPTION_BATCH_DO",
        "class_name": "DescriptionBatchDO"
      }
    ]
  },

  // DO migrations - v2 deleted old KV DO, v3 creates new SQLite DO
  "migrations": [
    {
      "tag": "v1",
      "new_classes": ["DescriptionBatchDO"]
    },
    {
      "tag": "v2",
      "deleted_classes": ["DescriptionBatchDO"]
    },
    {
      "tag": "v3",
      "new_sqlite_classes": ["DescriptionBatchDO"]
    }
  ],

  // Build configuration
  "build": {
    "command": "npm run build"
  },

  // Routes
  "routes": [
    {
      "pattern": "description.arke.institute",
      "custom_domain": true
    }
  ],

  // Observability
  "observability": {
    "enabled": true
  }
}
