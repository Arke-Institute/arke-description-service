{
  // Worker configuration for description-service
  "name": "arke-description-service",
  "main": "src/index.ts",
  "compatibility_date": "2024-01-01",

  // Environment variables
  "vars": {
    "DEEPINFRA_BASE_URL": "https://api.deepinfra.com/v1/openai",
    "MODEL_NAME": "openai/gpt-oss-20b",
    "MAX_TOKENS": 3072,
    "CONTEXT_WINDOW_TOKENS": 131000,
    "SAFETY_MARGIN_RATIO": 0.7
  },

  // Note: Set DEEPINFRA_API_KEY as a secret using:
  // wrangler secret put DEEPINFRA_API_KEY

  // Build configuration
  "build": {
    "command": "npm run build"
  },

  "routes": [
    {
      "pattern": "description.arke.institute",
      "custom_domain": true
    }
  ],

  // Observability
  "observability": {
    "enabled": true
  }
}
